<% include ../head.ejs %>

<link href="/components/github-markdown-css/github-markdown.css" rel="stylesheet">

<div class="container">
    <h2 class="center"><%- doc.title %></h2>
    <% if(doc.versionOf){ %>
    <p><a href="/knowledge/<%- doc.versionOf %>">View newest version of this document</a></p>
    <% } %>
    <div id="marked" class="border markdown-body"></div>
    <div class="button-group pull-right">
        <a href="/knowledge/<%- doc.id %>/edit" class="button success">Edit</a>
        <!--<a href="/knowledge/<%- doc.id %>/delete" class="button danger areyousure">Delete</a>-->
    </div>
    <% if(doc.updatedAt){ %>
    <p>Last updated <%- moment(doc.updatedAt).calendar() %></p>
    <% } %>
    <p>Created <%- moment(doc.createdAt).calendar() %></p>

    <label>Files</label>
    <% doc.uploads.map(function(u){ %>

    <a href="/download/<%- u.id %>"><%- u.name %></a>

    <% }); %>

    <hr/>

    <form action="/knowledge/<%- doc.id %>/upload" method="post" enctype="multipart/form-data">
        <label>Upload</label>
        <input type="file" name="newfile">
        <button>Upload</button>
    </form>

    <% if(<% doc.versions){ %>
    <h3>Old versions of this document:</h3>
    <ul>
        <% doc.versions.map(function (version){ %>
        <li><a href="/knowledge/<%- version.id %>"><%- version.createdAt %></a></li>
        <% }); %>
    </ul>

    <% } %>
</div>

<script src="/components/marked/marked.min.js"></script>
<script>
    marked.setOptions({
        renderer: new marked.Renderer(),
        gfm: true,
        tables: true,
        breaks: false,
        pedantic: false,
        sanitize: false,
        smartLists: true,
        smartypants: false
    });

    var content = decodeURI("<%- encodeURI(doc.body) %>");
    document.getElementById('marked').innerHTML = marked(content);
</script>

